        public static int SumarArreglos(int[,] arreglo1, int[,] arreglo2)
        {
            int resultado = 0;
            for (int i = 0; i < arreglo1.GetLength(0); i++)
            {
                for (int j = 0; j < arreglo1.GetLength(1); j++)
                {
                    resultado += arreglo1[i, j] + arreglo2[i, j];
                }
            }

            return resultado;
        }

